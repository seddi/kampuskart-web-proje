<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="bilgi" >
  <thead>
      <tr>
        <th>Satış Noktası</th>
        <th>Alınan Ürün</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Tarihi</th>
        <th>Saati</th>
        <th>Harcama Tutarı</th>
      </tr>
  </thead>

  <tbody>
		<% @user_harcama.each do |u| %>
			<% @total += u.adet * u.urun.fiyat.round(2) %>
      <tr>
        <td><%= u.sube.isim %></td>
        <td><%= u.urun.isim %></td>
        <td><%= u.adet %></td>
        <td><%= u.urun.fiyat.round(2) %></td>
        <td><%= u.zaman.strftime("%Y-%m-%d") %></td>
        <td><%= u.zaman.strftime("%I:%M %p") %></td>
        <td><%= u.urun.fiyat.round(2)*u.adet %></td>
      </tr>
    <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><strong>Toplam:</strong></td>
        <td><%= @total %></td>
      </tr>
  </tbody>
</table>

