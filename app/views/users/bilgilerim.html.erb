<script src="/assets/jquery.js"></script>
<script src="/assets/facebox.js"></script>
<link href="/assets/facebox.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        loadingImage : '/assets/loading.gif',
        closeImage   : '/assets/closelabel.png'
      })
    })
  </script>
<% if session[:user_id] %>
  <table cellpadding="7" cellspacing="7" border="4" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>İsim</th>
				<td><%=@user.isim%></td>
				<td>
				 <i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Soyisim</th>
				<td><%=@user.soyisim%></td>
				<td style="width:20px">
					<i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Kullanıcı numarası</th>
				<td><%=@user.number%></td>
				<td>
					<i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Tc</th>
				<td><%=@user.tc%></td>
				<td>
					<i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Email</th>
				<td><%=@user.email%></td>
				<td>
					<a href="#email" rel="facebox"><div class="btn btn-danger" style="height:15px;">Düzenle</div></a>
            <div id="email" style="display:none;">
              <form action="/users/update_user" method="post" class="form-horizontal" >
                <fieldset>
                 <legend>Yeni Email Giriniz.</legend>
                  <div class="control-group">
                    <input type="text" class="input-xlarge" id="input01" name="post" value="<%=@user.email%>">
                    <input type="hidden" class="input-xlarge" id="input02" name="id" value="<%=@user.id%>">
                    <input type="hidden" class="input-xlarge" id="input03" name="value" value="email">
                  </div>
                </fieldset>
              <div class="form-actions">
                 <button type="submit" class="btn">Değiştir</button>
              </div>
            </form>
          </div>
				</td>
			</tr>
			<tr>
        <th>Ünvan</th>
				<td><%=@user.unvan%></td>
				<td>
					<i>Değiştirilimez.</i>
				</td>
			</tr>
			<tr>
        <th>Telefon</th>
				<td><%=@user.telefon%></td>
				<td>
					<a href="#telefon" rel="facebox"><div class="btn btn-danger" style="height:15px;">Düzenle</div></a>
            <div id="telefon" style="display:none;">
              <form action="/users/update_user" method="post" class="form-horizontal" >
                <fieldset>
                 <legend>Yeni Numara Giriniz.</legend>
                  <div class="control-group">
                    <input type="text" class="input-xlarge" id="input01" name="post" value="<%=@user.telefon%>">
                    <input type="hidden" class="input-xlarge" id="input02" name="id" value="<%=@user.id%>">
                    <input type="hidden" class="input-xlarge" id="input03" name="value" value="telefon">
                  </div>
                </fieldset>

              <div class="form-actions">
                 <button type="submit" class="btn">Değiştir</button>
              </div>
            </form>
          </div>

				</td>
			</tr>
			<tr>
        <th>Parola</th>
				<td><%=@user.password%></td>
				<td>
					<a href="#sifre" rel="facebox"><div class="btn btn-danger" style="height:15px;">Düzenle</div></a>
            <div id="sifre" style="display:none;">
              <form action="/users/update_user" method="post" class="form-horizontal" >
                <fieldset>
                 <legend>Yeni Şifre Giriniz.</legend>
                  <div class="control-group">
                    <input type="text" class="input-xlarge" id="input01" name="post" value="<%=@user.password%>">
                    <input type="hidden" class="input-xlarge" id="input02" name="id" value="<%=@user.id%>">
                    <input type="hidden" class="input-xlarge" id="input03" name="value" value="password">
                  </div>
                </fieldset>

              <div class="form-actions">
                 <button type="submit" class="btn">Değiştir</button>
              </div>
            </form>
          </div>

				</td>
			</tr>
			<tr>
        <th>Doğum Günü</th>
				<td><%=@user.dogumgunu%></td>
				<td>
					<i>Değiştirilemez.</i>
				</td>
      </tr>
    </thead>

  </table>
<% else %>
	<% redirect_to '/users/index' %>
	<% flash[:error] = "Giriş Yapmalısınız." %>
<% end %>
