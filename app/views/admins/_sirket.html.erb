<script src="/assets/facebox.js"></script>
<link href="/assets/facebox.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        loadingImage : '/assets/loading.gif',
        closeImage   : '/assets/closelabel.png'
      })
    })
  </script>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="bilgi" >
  <thead>
      <tr>
        <td><strong>İsim</strong></td>
        <td><strong>Adres</strong></td>
        <td><strong>Telefon</strong></td>
        <td><strong>Email</strong></td>
        <td style="width:100px"></td>
      </tr>
  </thead>

  <tbody>
   <% @sirket.each do |u| %>
      <tr>
        <td><%= u.isim %></td>
        <td><%= u.adres %></td>
        <td><%= u.telefon %></td>
        <td><%= u.email %></td>
        <td style="width:100px"><div class="btn"><%= link_to 'Düzenle',:action => :sirket_duzenle, :sirket => u.id %></div></td>
				<td style="width:100px"><div class="btn"><%= link_to 'Şatışlar',:action => :incele, :sirket => u.id %></div></td>
			</tr>
		<% end %>
  </tbody>
</table>

