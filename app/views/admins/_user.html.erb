<script src="/assets/facebox.js"></script>
<link href="/assets/facebox.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        loadingImage : '/assets/loading.gif',
        closeImage   : '/assets/closelabel.png'
      })
    })
  </script>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="bilgi" >
  <thead>
			<tr>
     	  <td><strong> Numara </strong></td>
        <td><strong> Tc </strong></td>
        <td><strong> İsim </strong></td>
        <td><strong> Soyisim </strong></td>
        <td><strong> Email </strong></td>
        <td><strong> Telefon </strong></td>
        <td><strong> Ünvan </strong></td>
        <td><strong> Bakiye </strong></td>
        <td><strong> Aktiflik Durumu <strong></td>
			</tr>
  </thead>

  <tbody>
    <% @user.each do |u| %>
			<% userCard = Card.find_by_user_id(u.id) %>
      <tr>
        <td><%= u.number %></td>
        <td><%= u.tc %></td>
        <td><%= u.isim %></td>
        <td><%= u.soyisim %></td>
        <td><%= u.email %></td>
        <td><%= u.telefon %></td>
        <td><%= u.unvan %></td>
				<td><%= userCard.bakiye.round(2) %>
				<% if userCard.aktif %>
	        <td><strong>aktif</strong></td>
				<% else %>
	        <td><strong>pasif</strong></td>
				<% end %>
				<td style="width:100px"><div class="btn"><%= link_to 'Düzenle',:action => :user_duzenle, :user => u.id %></div></td>
			</tr>
		<% end %>
  </tbody>
</table>

