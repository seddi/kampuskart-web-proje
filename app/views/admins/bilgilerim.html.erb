<script src="/assets/jquery.js"></script>
<script src="/assets/facebox.js"></script>
<link href="/assets/facebox.css" rel="stylesheet" type="text/css" />
  <script type="text/javascript">
    jQuery(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        loadingImage : '/assets/loading.gif',
        closeImage   : '/assets/closelabel.png'
      })
    })
  </script>
<% if session[:admin_id] %>
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>İsim</th>
				<td><%=@admin.isim%></td>
				<td>
				 <i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Adres</th>
				<td><%=@admin.soyisim%></td>
				<td style="width:20px">
					<i>Değiştirilemez.</i>
				</td>
			</tr>
			<tr>
        <th>Email</th>
				<td><%=@admin.email%></td>
				<td>
					<a href="#email" rel="facebox"><div class="btn btn-danger">Düzenle</div></a>
            <div id="email" style="display:none;">
              <form action="/admins/update_admin" method="post" class="form-horizontal" >
                <fieldset>
                 <legend>Yeni Email Giriniz.</legend>
                  <div class="control-group">
                    <input type="text" class="input-xlarge" id="input01" name="post" value="<%=@admin.email%>">
                    <input type="hidden" class="input-xlarge" id="input02" name="id" value="<%=@admin.id%>">
                    <input type="hidden" class="input-xlarge" id="input03" name="value" value="email">
                  </div>
                </fieldset>
              <div class="form-actions">
                 <button type="submit" class="btn">Değiştir</button>
              </div>
            </form>
          </div>
				</td>
			</tr>
			<tr>
        <th>Parola</th>
				<td><%=@admin.password%></td>
				<td>
					<a href="#sifre" rel="facebox"><div class="btn btn-danger">Düzenle</div></a>
            <div id="sifre" style="display:none;">
              <form action="/admins/update_admin" method="post" class="form-horizontal" >
                <fieldset>
                 <legend>Yeni Şifre Giriniz.</legend>
                  <div class="control-group">
                    <input type="text" class="input-xlarge" id="input01" name="post" value="<%=@admin.password%>">
                    <input type="hidden" class="input-xlarge" id="input02" name="id" value="<%=@admin.id%>">
                    <input type="hidden" class="input-xlarge" id="input03" name="value" value="password">
                  </div>
                </fieldset>

              <div class="form-actions">
                 <button type="submit" class="btn">Değiştir</button>
              </div>
            </form>
          </div>

				</td>
			</tr>
    </thead>

  </table>
<% else %>
	<% redirect_to '/users/index' %>
	<% flash[:error] = "Giriş Yapmalısınız." %>
<% end %>
